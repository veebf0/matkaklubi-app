<!DOCTYPE html>
<html lang="en">

<head>
    <title>Matkaklubi - registreerumine</title>
    <% include ../partials/header.ejs %>
    <script src="/matkaklubi/registreeru.js"></script>
</head>

<body>
    <div class="container">
        <% include ../partials/menyy.ejs %>
        <div class="container">
            <h1>Registreeru matkale <%= andmed.nimi %></h1>
            <div class="row">
                <div class="col sm-6">
                    <%= andmed.kirjeldus %>
                </div>
                <div class="col-sm-6">
                    <img class="img-fluid" src="<%= andmed.piltUrl %>" alt="">
                </div>
            </div>
            <div id="Registreerunud" class="row">
                <% for ( let i = 0; i < andmed.registreerunud.length; i++) { %>
                    <div class="col-12">
                        <div>
                            Nimi: <%= andmed.registreerunud[i].nimi %>                    
                        </div>
                        <div>
                            Email: <%= andmed.registreerunud[i].email %>                    
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</body>

</html>